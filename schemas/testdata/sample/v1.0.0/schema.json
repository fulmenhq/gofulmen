{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/test/sample/config-v1.0.0.json",
  "title": "SampleConfig",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "settings": {
      "type": "object",
      "properties": {
        "retries": {
          "type": "integer",
          "minimum": 0
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "required": [
        "retries",
        "endpoints"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "settings"
  ],
  "additionalProperties": false
}
